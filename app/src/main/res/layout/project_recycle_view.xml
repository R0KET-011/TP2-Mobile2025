<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="5pt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/project_list_template"
    android:layout_marginStart="3pt"
    android:layout_marginEnd="3pt">

    <TextView
        android:text = "NAME NAME NAME NAME NAME"
        android:id="@+id/projectName"
        android:textColor="@color/text_primary"
        android:textSize="7pt"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="COURSE NAME COURSE NAME"
        android:id="@+id/projectCourse"
        android:textColor="@color/text_primary"
        android:textSize="6pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="GROUP NUMBER"
        android:id="@+id/projectGroup"
        android:textColor="@color/text_primary"
        android:textSize="6pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/project_participant"
            android:id="@+id/projectMembersText"
            android:textColor="@color/text_primary"
            android:textSize="6pt"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="1-1"
            android:id="@+id/projectMembersCount"
            android:textColor="@color/text_primary"
            android:textSize="6pt"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>